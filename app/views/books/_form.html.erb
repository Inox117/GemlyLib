        <div class="form-group col-md-6">
            <%= form.label :isbn10, 'ISBN10:' %>
            <%= form.text_field :isbn10, placeholder: "ISBN10" %>
        </div>
        <div class="form-group col-md-6">
          <%= form.label :isbn13, 'ISBN13:' %>
            <%= form.text_field :isbn13, placeholder: "ISBN13" %>
        </div>
  </div>
  <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :author, 'Author:' %>
